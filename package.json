{
  "name": "@krml/workspace",
  "private": true,
  "version": "0.1.0",
  "main": "index.js",
  "author": "Fabien JUIF <fabien.juif@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:core": "echo TODO",
    "build:react": "echo TODO",
    "build": "echo TODO",
    "lint:js": "echo TODO",
    "lint": "echo TODO",
    "test": "jest --projects",
    "coveralls": "echo TODO",
    "ci": "echo TODO"
  },
  "workspaces": [
    "packages/k-ramel",
    "packages/drivers/*",
    "packages/connectors/*",
    "examples/*"
  ],
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.1",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-preset-env": "1.6.1",
    "coveralls": "3.0.0",
    "cross-env": "5.1.3",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.17.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-babel": "4.1.2",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.6.1",
    "jest": "22.2.2",
    "lodash": "^4.17.5",
    "npm-run-all": "4.1.2",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-redux": "5.0.6",
    "rollup": "0.55.5",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-commonjs": "8.3.0",
    "rollup-plugin-uglify": "3.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ],
    "env": {
      "build": {
        "plugins": [
          "external-helpers",
          "transform-class-properties",
          "transform-react-jsx",
          "transform-object-rest-spread"
        ]
      },
      "test": {
        "presets": [
          [
            "env",
            {
              "modules": false
            }
          ]
        ],
        "plugins": [
          "transform-es2015-modules-commonjs",
          "transform-object-rest-spread",
          "transform-react-jsx",
          "transform-class-properties"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "babel"
    ],
    "globals": {
      "fetch": false
    },
    "env": {
      "browser": true
    },
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off",
      "semi": [
        2,
        "never"
      ]
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./misc/test-setup.js",
    "testEnvironment": "node"
  }
}
